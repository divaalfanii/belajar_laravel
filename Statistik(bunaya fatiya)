  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const notes = JSON.parse(localStorage.getItem("notes")) || [];
      const pinned = notes.filter(n => n.pinned).length;
      const favorites = notes.filter(n => n.favorite).length;

      document.getElementById("totalNotes").textContent = notes.length;
      document.getElementById("pinnedNotes").textContent = pinned;
      document.getElementById("favNotes").textContent = favorites;

      const ctx = document.getElementById("notesChart").getContext("2d");
      new Chart(ctx, {
        type: "bar",
        data: {
          labels: ["Total", "Dipin", "Favorit"],
          datasets: [{
            label: "Jumlah Catatan",
            data: [notes.length, pinned, favorites],
            backgroundColor: [
              "rgba(255, 99, 132, 0.6)",
              "rgba(255, 182, 193, 0.7)",
              "rgba(255, 105, 180, 0.7)"
            ],
            borderColor: [
              "rgba(255, 99, 132, 1)",
              "rgba(255, 182, 193, 1)",
              "rgba(255, 105, 180, 1)"
            ],
            borderWidth: 2,
            borderRadius: 10
          }]
        },
        options: {
          responsive: true,
          plugins: {
            legend: { display: false },
            title: {
              display: true,
              text: "Grafik Statistik Catatan ğŸ’•",
              color: "#d63384",
              font: { size: 18, weight: "bold" }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              ticks: { color: "#555" }
            },
            x: {
              ticks: { color: "#555" }
            }
          }
        }
      });
    });
  </script>
